<form accept-charset="UTF-8" action="users/verify_login" class="new_user" id="new_user" method="post">
  <div class="form-group">
    <label for="user_username">User Name</label>
    <input class="form-control" id="user_username" name="user[username]" type="text">
  </div>
  <div class="form-group">
    <label for="user_password">Password</label>
    <input class="form-control" id="user_password" name="user[password]" type="password">
  </div>
  <input class="btn btn-default" name="commit" type="submit" value="Log In">
</form>